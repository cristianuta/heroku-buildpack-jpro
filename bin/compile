#!/usr/bin/env bash

set -euo pipefail

BUILD_DIR="${1}"
CACHE_DIR="${2}"
ENV_DIR="${3}"

BUILDPACK_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && cd .. && pwd)"

source "${BUILDPACK_DIR}/lib/output.sh"
source "${BUILDPACK_DIR}/lib/util.sh"
source "${BUILDPACK_DIR}/lib/java_properties.sh"
source "${BUILDPACK_DIR}/lib/maven.sh"
source "${BUILDPACK_DIR}/lib/metrics.sh"
source "${BUILDPACK_DIR}/lib/openjdk.sh"

metrics::init "${CACHE_DIR}" "java"
metrics::setup

util::export_env_dir "${ENV_DIR}" "." "JAVA_OPTS|JAVA_TOOL_OPTIONS"

openjdk::install_openjdk_via_jvm_common_buildpack "${BUILD_DIR}" "${BUILDPACK_DIR}"

maven::setup_maven_and_build_app \
	"${BUILD_DIR}" \
	"${CACHE_DIR}" \
	"${MAVEN_JAVA_OPTS:-""}" \
	"${MAVEN_CUSTOM_OPTS:-"-DskipTests"}" \
	"${MAVEN_CUSTOM_GOALS:-"clean dependency:list install jpro:release"}"

for DIR in ".m2" ".maven" ; do
  cp -r $CACHE_DIR/$DIR $BUILD_DIR/$DIR
done

rm -rf "${BUILD_DIRECTORY}"
mkdir "${BUILD_DIRECTORY}"
unzip -o -d ${BUILD_DIRECTORY} ${BUILD_DIR}/target/fractals-jpro.zip
chmod +x ${BUILD_DIR}/target/fractals-jpro/bin/start.sh
chmod +x ${BUILD_DIR}/target/fractals-jpro/bin/stop.sh
chmod +x ${BUILD_DIR}/target/fractals-jpro/bin/restart.sh
